{
  "name": "shoppingcart",
  "version": "1.0.0",
  "description": "backend shopping cart project",
  "main": "server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --collect-coverage --forceExit --watch --onlyChanged",
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "upload": "node server/utility/upload.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackylearn/shopping.git"
  },
  "keywords": [
    "passport",
    "react",
    "payment",
    "shopping",
    "cart"
  ],
  "author": "Jacky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jackylearn/shopping/issues"
  },
  "homepage": "https://github.com/jackylearn/shopping#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-flash": "^0.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-flash-message": "^2.1.0",
    "express-session": "^1.17.2",
    "jest": "^26.6.0",
    "line-pay-sdk": "^1.0.3",
    "mongodb": "^4.1.0",
    "mongoose": "^5.13.7",
    "passport": "^0.4.1",
    "passport-google-oauth2": "^0.2.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "mongodb-memory-server": "^7.3.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": ["/node_modules/", "/client/"] 
  }
}
